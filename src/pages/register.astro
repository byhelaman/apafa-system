---
import Layout from "../layouts/Layout.astro";
import { RegisterForm } from "@/components/forms/RegisterForm";
import { Header } from "@/components/Header";
---

<Layout title="Registrarse | APAFA">
  <div class="h-screen w-screen grid fondo" id="content">
    <section class="w-full max-w-[680px] mx-auto">
      <Header client:load />
      <div class="my-14 px-4">
        <RegisterForm client:load />
      </div>
    </section>
  </div>
</Layout>

<style>
  .fondo {
    background-image: url("https://images.unsplash.com/photo-1719937206168-f4c829152b91?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
    background-size: cover;
    background-position: center;
  }
</style>
