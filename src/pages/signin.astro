---
import Layout from "../layouts/Layout.astro";

import { SigninForm } from '@/components/auth/SigninForm';
import { Header } from '@/components/Header';

const { isloggin, role } = Astro.locals

---

<Layout title="APAFA">
  <section class="w-full max-w-96 px-6 mx-auto flex flex-col gap-16">
    <div class="my-5">
      <Header data={{isloggin, role}} client:load />
    </div>
    <div class="pb-10">
      <div class="mb-6">
        <h2 class="text-3xl font-bold">Bienvenido!</h2>
        <p class="text-lg">Accede a tu cuenta para continuar</p>
      </div>
      <SigninForm client:load/> 
    </div>
  </section>
</Layout>